@using tett1.Utilities
@model tett1.Models.Post
@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
	<div class="pagetitle">
		<h2>Them bai viet moi</h2>
	</div>
	<form asp-action="Create" method="post">
	<div class="form-row">
		<div class="form-group col-md-6">
			<label asp-for="PostID">Chon muc</label>
			<select asp-for="PostID"
				class="form-control"
				asp-items="@(new SelectList(ViewBag.mnlist,"Value","Text"))"></select>
				<span asp-validation-for="PostID" class="alert-danger"></span>
		</div>
		<div class="tox-form col-md-12">
			<label asp-for="Title">Title</label>
			<input type="text" class="form-control mb-3" asp-for="Title" />
		</div>
		<div class="form-group col-md-12">
			<label asp-for="Abstract">Abstract</label>
			<input type="text" class="form-control mb-3" asp-for="Abstract" />
		</div>
		<div class="form-group col-md-12">
			<label class="control-label">Images</label>
			<div class="input-group mb-3">
				<div class="input-group-prepend">
					<button class="btn btn-success" type="button" onclick="openDialog()">choose a pic</button>
				</div>
				<input type="text" class="form-control" asp-for="Images" id="file-input" aria-describedby="button-addon2" />
			</div>
		</div>
		<div class="form-group col-md-12">
			<label asp-for="Contents">Content</label>
			<textarea asp-for="Contents" class="form-control"></textarea>
		</div>	
		<div class="form-group col-md-6 mt-3 mb-3">
			<label>
				@Html.CheckBox("IsActive", false)
				Hien Thi
			</label>
		</div>
		<div class="form-group	d-none">
			<input asp-for="CreatedDate" class="form-control" value="@Functions.getCurrentDate()" />
		</div>
		<div class="form-group	d-none">
			<input asp-for="PostOrder" class="form-control" value="1" />
		</div>
		<div class="form-group	d-none">
			<input asp-for="Category" class="form-control" value="1" />
		</div>
		<div class="form-group	d-none">
			<input asp-for="Status" class="form-control" value="1" />
		</div>
		<div class="form-group	d-none">
			<input asp-for="Link" class="form-control" value="NULL" />
		</div>
	</div>
	<a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
		<i class="bi bi-arrow-left-circle"></i>Quay lai
	</a>
	<button type="submit" class="btn btn-lg btn-danger p-2">
		<i class="bi bi-trash-fill"></i>Luu lai
	</button>

	</form>
</main>
@{
	var summerNote = new tett1.Areas.Admin.Models.SummerNote("#Contents");
	<partial name="_SummerNote" model="summerNote"/>
}